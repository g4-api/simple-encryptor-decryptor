<Window x:Class="SimpleEncryptorDecryptor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStyle="ToolWindow"
        Title="Encryptor Decryptor v1.0"
        Height="240"
        Width="365">
    <Grid Margin="0,0,0,-16">
        <Label Content="Encryptor Decryptor v1.0"
               HorizontalAlignment="Center"
               Margin="0,10,0,0"
               VerticalAlignment="Top"
               Height="40"
               Width="330"
               FontSize="22"
               FontWeight="Bold"/>

        <Label Content="Key:"
               HorizontalAlignment="Left"
               Margin="12,51,0,0"
               VerticalAlignment="Top"
               RenderTransformOrigin="-6.268,-0.931"/>

        <TextBox HorizontalAlignment="Left"
                 Margin="55,55,0,0"
                 VerticalAlignment="Top"
                 Width="145"
                 Name="TxbKey"
                 TextWrapping="NoWrap"/>

        <Label Content="Input:"
               HorizontalAlignment="Left"
               Margin="12,74,0,0"
               VerticalAlignment="Top"/>

        <TextBox HorizontalAlignment="Left"
                 Margin="55,78,0,0"
                 TextWrapping="NoWrap"
                 VerticalAlignment="Top"
                 Width="145"
                 Name="TxbInput"/>

        <Button Content="Encrypt"
                HorizontalAlignment="Left"
                Margin="55,101,0,0"
                VerticalAlignment="Top"
                RenderTransformOrigin="-0.57,1.481"
                Height="30"
                Width="70"
                Name="BtnEncrypt"
                Cursor="Hand"
                Click="BtnEncrypt_Click"/>

        <Button Content="Decrypt"
                HorizontalAlignment="Left"
                Margin="130,101,0,0"
                VerticalAlignment="Top"
                Height="30"
                Width="70"
                Name="BtnDecrypt"
                Cursor="Hand" Click="BtnDecrypt_Click"/>

        <Viewbox HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Width="100"
                 Height="100"
                 Margin="211,52,0,0"
                 Stretch="Fill"
                 RenderTransformOrigin="0.5,0.5">

            <Canvas Width="640" Height="640">
                <Path Fill="Black"
                      Data="M96 160C96 124.7 124.7 96 160 96L480 96C515.3 96 544 124.7 544 160L544 480C544 515.3 515.3 544 480 544L160 544C124.7 544 96 515.3 96 480L96 160zM240 164C215.7 164 196 183.7 196 208L196 256C196 280.3 215.7 300 240 300L272 300C296.3 300 316 280.3 316 256L316 208C316 183.7 296.3 164 272 164L240 164zM236 208C236 205.8 237.8 204 240 204L272 204C274.2 204 276 205.8 276 208L276 256C276 258.2 274.2 260 272 260L240 260C237.8 260 236 258.2 236 256L236 208zM376 164C365 164 356 173 356 184C356 193.7 362.9 201.7 372 203.6L372 280C372 291 381 300 392 300C403 300 412 291 412 280L412 184C412 173 403 164 392 164L376 164zM228 360C228 369.7 234.9 377.7 244 379.6L244 456C244 467 253 476 264 476C275 476 284 467 284 456L284 360C284 349 275 340 264 340L248 340C237 340 228 349 228 360zM324 384L324 432C324 456.3 343.7 476 368 476L400 476C424.3 476 444 456.3 444 432L444 384C444 359.7 424.3 340 400 340L368 340C343.7 340 324 359.7 324 384zM368 380L400 380C402.2 380 404 381.8 404 384L404 432C404 434.2 402.2 436 400 436L368 436C365.8 436 364 434.2 364 432L364 384C364 381.8 365.8 380 368 380z">
                    <Path.RenderTransform>
                        <!-- x' = 1.428571*x - 137.142857 ; same for y -->
                        <MatrixTransform Matrix="1.428571,0,0,1.428571,-137.142857,-137.142857"/>
                    </Path.RenderTransform>
                </Path>
            </Canvas>
        </Viewbox>

        <TextBox HorizontalAlignment="Center"
                 Margin="0,157,0,0"
                 VerticalAlignment="Top"
                 Width="328"
                 Name="TxbResult"
                 Height="35"
                 IsReadOnly="True" />
    </Grid>
</Window>